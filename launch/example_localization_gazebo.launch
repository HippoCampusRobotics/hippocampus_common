<launch>
    <arg name="gui" default="true" />
    <arg name="rviz" default="false" />

    <include file="$(find hippocampus_sim)/launch/single_vehicle_complete.launch">
        <arg name="gui" value="$(arg gui)" />
        <arg name="rviz" value="$(arg rviz)" />
    </include>
    <!-- use the group tag to launch nodes in a namespace -->
    <group ns="uuv00">
        <include file="$(find hippocampus_common)/launch/tf_publisher.launch" />
        <include file="$(find hippocampus_common)/launch/tf_pose_ros_to_px4.launch" />

        <include file="$(find mu_auv_localization)/launch/gazebo_localization.launch">
            <arg name="ns" value="uuv00" />
        </include>

    </group>
</launch>
